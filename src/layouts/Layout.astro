---
const {
  title = "Secadores de Ar SMC IDF",
  description = "Desempenho industrial, economia e confiabilidade para sistemas de ar comprimido",
  canonical = "/mpa",
} = Astro.props;

const canonicalUrl = new URL(canonical, Astro.site ?? "http://localhost:4321");
import { Font } from "astro:assets";

import "../styles/global.css";
import Navbar from "../components/Nabvar.astro";
import Footer from "../components/Footer.astro";

import WhatsappButton from "../components/WhatsappButton.astro";
import PrivacyPolicyModal from "../components/PrivacyPolicyModal.astro";
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-P26QQL8");
    </script>
    <!-- End Google Tag Manager -->

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl.toString()} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index, follow" />

    <Font cssVariable="--font-poppins" preload />
  </head>

  <body class="text-zinc-900 bg-white">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-P26QQL8"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->

    <Navbar />

    <slot />

    <Footer />

    <WhatsappButton />

    <PrivacyPolicyModal />
  </body>
</html>
